# Labels Service
# Copy this file to .env and adjust values as needed

# ======================
# Server settings
# ======================
HOST=0.0.0.0
PORT=8000

# Enable auto-reload (useful in development)
# true = restart on file changes, false = no reload (recommended false in production)
RELOAD=false

# ======================
# Application settings
# ======================

# Keep intermediate CSV files for debugging
# true = keep CSV files, false = delete after job completion
KEEP_CSV=false

# Maximum number of parallel jobs
# 0 = auto (CPU count - 1), >0 = explicit number (e.g. 4)
MAX_PARALLEL=0

# Timeout per job in seconds (default 600 = 10 minutes)
GLABELS_TIMEOUT=600

# Hours to retain job state in memory before cleanup
RETENTION_HOURS=24

# Whether to automatically cleanup PDF files when jobs expire (true/false)
AUTO_CLEANUP_PDF=true

# ======================
# Logging settings
# ======================#

# Log level: DEBUG / INFO / WARNING / ERROR
# Development: DEBUG. Production: INFO or higher.
LOG_LEVEL=INFO

# Directory for log files (relative or absolute). Default: logs
LOG_DIR=logs